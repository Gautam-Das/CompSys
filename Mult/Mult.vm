// Calculates a = x*y
// a is a local variable
// x & y are static variables

// Calculate abs(x)
push static 0
push constant 0
gt
if-goto XgreaterThan
push static 0
neg
pop temp 0
goto y

label XgreaterThan
push static 0
pop temp 0

label y
// Calculate abs(y)
push static 1
push constant 0
gt
if-goto YgreaterThan
push static 1
neg
pop temp 1
goto setup

label YgreaterThan
push static 1
pop temp 1

label setup
push constant 0
pop temp 2  // temp 2 will hold the result

label mult
push temp 0
push constant 0
eq  // check if x == 0
if-goto final

push temp 2
push temp 1
add
pop temp 2

push temp 0
push constant 1
sub
pop temp 0
goto mult

label final
// Now handle the signs
push static 0
push static 1
xor  // if signs of x and y differ, result should be negative
push constant 0
eq
if-goto posResult

// Negate result
push temp 2
neg
pop local 0
goto END

label posResult
push temp 2
pop local 0

label END
goto END
